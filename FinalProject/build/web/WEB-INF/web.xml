        <servlet-name>deleteComment</servlet-name>
        <servlet-class>controller.component.DeleteComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>controller.mainController.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recover</servlet-name>
        <servlet-class>controller.authController.RecoverPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setting</servlet-name>
        <servlet-class>controller.mainController.ChangeEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPassword</servlet-name>
        <servlet-class>controller.mainController.ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeAuthentication</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageDetail</servlet-name>
        <url-pattern>/imageDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imageData</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagingImage</servlet-name>
