        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recover</servlet-name>
        <url-pattern>/recover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setting</servlet-name>
        <url-pattern>/changeEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
