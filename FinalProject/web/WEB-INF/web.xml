<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>controller.authController.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeAuthentication</servlet-name>
        <servlet-class>controller.authController.DeAuthentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.mainController.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>controller.authController.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageDetail</servlet-name>
        <servlet-class>controller.mainController.ImageDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>controller.mainController.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvatarImage</servlet-name>
        <servlet-class>controller.image.AvatarImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imageData</servlet-name>
        <servlet-class>controller.image.Image</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagingImage</servlet-name>
        <servlet-class>controller.mainController.PagingImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>controller.mainController.CommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeAuthentication</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageDetail</servlet-name>
        <url-pattern>/imageDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvatarImage</servlet-name>
        <url-pattern>/image/avatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imageData</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagingImage</servlet-name>
        <url-pattern>/paging</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
